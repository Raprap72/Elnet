    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-cog mr-1"></i>
            System Settings
        </div>
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle mr-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <div class="tab-content">
                <!-- General Settings -->
                <div class="tab-pane fade show active" id="general">
                    <h5 class="border-bottom pb-2">General Settings</h5>
                    <form asp-action="UpdateSettings" method="post">
                        @Html.AntiForgeryToken()
                        
                        @if (ViewBag.GeneralSettings != null)
                        {
                            foreach (var setting in ViewBag.GeneralSettings)
                            {
                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        <label for="@setting.Key" class="form-label">@setting.DisplayName</label>
                                        <input type="hidden" name="keys" value="@setting.Key" />
                                    </div>
                                    <div class="col-md-8">
                                        @if (setting.Type == "text")
                                        {
                                            <input type="text" class="form-control" id="@setting.Key" name="values" value="@setting.Value" />
                                        }
                                        else if (setting.Type == "toggle")
                                        {
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="@setting.Key" name="values" value="true" @(setting.Value == "true" ? "checked" : "") />
                                            </div>
                                        }
                                        else if (setting.Type == "textarea")
                                        {
                                            <textarea class="form-control" id="@setting.Key" name="values" rows="3">@setting.Value</textarea>
                                        }
                                        <small class="text-muted">@setting.Description</small>
                                    </div>
                                </div>
                            }
                        }
                        
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save mr-1"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                
