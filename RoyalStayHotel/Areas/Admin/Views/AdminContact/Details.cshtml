@model RoyalStayHotel.Models.ContactFormSubmission

@{
    ViewData["Title"] = "Message Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <h1 class="mt-4">Message Details</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-envelope mr-1"></i>
                    Message from @Model.Name
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-2 fw-bold">Status:</div>
                <div class="col-md-10">
                    @if (Model.IsRead)
                    {
                        <span class="badge bg-success">Read</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Unread</span>
                    }
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-2 fw-bold">Date:</div>
                <div class="col-md-10">@Model.SubmissionDate.ToString("MM/dd/yyyy HH:mm")</div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-2 fw-bold">Name:</div>
                <div class="col-md-10">@Model.Name</div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-2 fw-bold">Email:</div>
                <div class="col-md-10">
                    <a href="mailto:@Model.Email">@Model.Email</a>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-2 fw-bold">Phone:</div>
                <div class="col-md-10">@Model.PhoneNumber</div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-2 fw-bold">Subject:</div>
                <div class="col-md-10">@Model.Subject</div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-2 fw-bold">Message:</div>
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-body">
                            @Model.Message
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-12">
                    <hr />
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Respond", "AdminContact", new { area = "Admin", id = Model.Id })" class="btn btn-success btn-lg">
                            <i class="fas fa-reply"></i> Respond
                        </a>
                        <div>
                            <a href="@Url.Action("Index", "AdminContact", new { area = "Admin" })" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <a href="@Url.Action("Delete", "AdminContact", new { area = "Admin", id = Model.Id })" class="btn btn-danger ms-2">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 