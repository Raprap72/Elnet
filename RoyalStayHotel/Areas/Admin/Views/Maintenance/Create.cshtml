@model RoyalStayHotel.Models.MaintenanceRequest

@{
    ViewData["Title"] = "Create Maintenance Task";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Create Maintenance Task</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="RoomId" class="control-label">Room</label>
                            <select asp-for="RoomId" class="form-control" asp-items="ViewBag.RoomId" required>
                                <option value="">-- Select Room --</option>
                            </select>
                            <span asp-validation-for="RoomId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label">Title</label>
                            <input asp-for="Title" class="form-control" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="IssueType" class="control-label">Issue Type</label>
                            <select asp-for="IssueType" class="form-control" asp-items="ViewBag.IssueTypes" required>
                                <option value="">-- Select Type --</option>
                            </select>
                            <span asp-validation-for="IssueType" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Priority" class="control-label">Priority</label>
                            <select asp-for="Priority" class="form-control" asp-items="ViewBag.Priorities" required>
                                <option value="">-- Select Priority --</option>
                            </select>
                            <span asp-validation-for="Priority" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ReportedById" class="control-label">Reported By</label>
                            <select asp-for="ReportedById" class="form-control" asp-items="ViewBag.ReportedById">
                                <option value="">-- Select User --</option>
                            </select>
                            <span asp-validation-for="ReportedById" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="TechnicianId" class="control-label">Assign Technician</label>
                            <select asp-for="TechnicianId" class="form-control" asp-items="ViewBag.TechnicianId">
                                <option value="">-- Not Assigned --</option>
                            </select>
                            <span asp-validation-for="TechnicianId" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="ScheduledFor" class="control-label">Schedule For</label>
                            <input asp-for="ScheduledFor" type="datetime-local" class="form-control" />
                            <span asp-validation-for="ScheduledFor" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="form-group mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 