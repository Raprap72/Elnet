@{
    ViewData["Title"] = "Services";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center mb-5">
            <h1 class="mb-4">Our Services</h1>
            <p class="lead">Experience the ultimate in luxury with our premium hotel services.</p>
        </div>
    </div>
    
    <div class="row mb-5">
        <div class="col-lg-4 mb-4">
            <div class="service-card text-center p-4">
                <i class="bi bi-cup-hot fs-1 mb-3"></i>
                <h3>24/7 Room Service</h3>
                <p>Enjoy gourmet meals delivered directly to your room at any hour of the day or night.</p>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="service-card text-center p-4">
                <i class="bi bi-water fs-1 mb-3"></i>
                <h3>Infinity Pool</h3>
                <p>Relax in our stunning infinity pool with panoramic views of the city skyline.</p>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="service-card text-center p-4">
                <i class="bi bi-house-heart fs-1 mb-3"></i>
                <h3>Spa & Wellness</h3>
                <p>Indulge in a range of spa treatments designed to rejuvenate your body and mind.</p>
            </div>
        </div>
    </div>
    
    <div class="row mb-5">
        <div class="col-lg-6 mb-4">
            <div class="service-feature p-4">
                <div class="row align-items-center">
                    <div class="col-md-4 text-center">
                        <i class="bi bi-building fs-1"></i>
                    </div>
                    <div class="col-md-8">
                        <h3>Conference Facilities</h3>
                        <p>Our state-of-the-art conference rooms are perfect for business meetings, seminars, and corporate events.</p>
                        <ul>
                            <li>High-speed internet</li>
                            <li>Video conferencing equipment</li>
                            <li>Catering services</li>
                            <li>Professional event planning</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="service-feature p-4">
                <div class="row align-items-center">
                    <div class="col-md-4 text-center">
                        <i class="bi bi-cart3 fs-1"></i>
                    </div>
                    <div class="col-md-8">
                        <h3>Shopping Experience</h3>
                        <p>Explore our curated selection of boutiques offering designer clothes, jewelry, and unique souvenirs.</p>
                        <ul>
                            <li>Luxury brands</li>
                            <li>Local artisanal crafts</li>
                            <li>Personalized shopping assistance</li>
                            <li>Exclusive hotel guest discounts</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-6">
            <h2 class="mb-4">Fine Dining</h2>
            <p>Our restaurant offers an exquisite culinary experience with dishes prepared by award-winning chefs using the finest local and international ingredients.</p>
            <p>From traditional favorites to innovative creations, our menu caters to all tastes and dietary requirements.</p>
            <ul class="list-group list-group-flush mb-4">
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Breakfast: 6:30 AM - 10:30 AM</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Lunch: 12:00 PM - 2:30 PM</li>
                <li class="list-group-item"><i class="bi bi-check-circle-fill text-success me-2"></i> Dinner: 6:00 PM - 10:30 PM</li>
            </ul>
            <a href="#" class="btn btn-primary">View Menu</a>
        </div>
        <div class="col-lg-6">
            <img src="~/images/restaurant.jpg" alt="Hotel Restaurant" class="img-fluid rounded">
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-12 text-center">
            <h2 class="mb-4">Additional Services</h2>
        </div>
        <div class="col-md-3 mb-4">
            <div class="text-center">
                <i class="bi bi-car-front fs-1 mb-3"></i>
                <h4>Airport Transfers</h4>
                <p>Private luxury transportation to and from the airport.</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="text-center">
                <i class="bi bi-bicycle fs-1 mb-3"></i>
                <h4>Bike Rentals</h4>
                <p>Explore the city at your own pace with our premium bikes.</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="text-center">
                <i class="bi bi-calendar-check fs-1 mb-3"></i>
                <h4>Concierge Services</h4>
                <p>Assistance with reservations, tickets, and local recommendations.</p>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="text-center">
                <i class="bi bi-translate fs-1 mb-3"></i>
                <h4>Translation Services</h4>
                <p>Professional translators available upon request.</p>
            </div>
        </div>
    </div>
</div> 