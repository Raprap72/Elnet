@model IEnumerable<RoyalStayHotel.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center mb-4">
            <h1 class="display-4">Our Rooms & Suites</h1>
            <p class="text-muted">Explore our collection of premium accommodations and book your stay</p>
        </div>
    </div>
    
    <!-- Filter Section -->
    <div class="mb-4 bg-light p-4 rounded">
        <h4 class="border-bottom pb-2">Filter Rooms</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <h5>Bed Type</h5>
                    <div class="form-check">
                        <input class="form-check-input filter-checkbox" type="checkbox" id="kingBed" data-filter="kingBed">
                        <label class="form-check-label" for="kingBed">King Bed</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input filter-checkbox" type="checkbox" id="doubleBeds" data-filter="doubleBeds">
                        <label class="form-check-label" for="doubleBeds">Double Beds</label>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <h5>Capacity</h5>
                    <div class="form-check">
                        <input class="form-check-input filter-checkbox" type="checkbox" id="threeGuests" data-filter="threeGuests">
                        <label class="form-check-label" for="threeGuests">3+ Guests</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input filter-checkbox" type="checkbox" id="fourGuests" data-filter="fourGuests">
                        <label class="form-check-label" for="fourGuests">4+ Guests</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Room List Section -->
    <div id="roomList" class="row">
        @foreach (var room in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="row g-0">
                        <div class="col-md-5">
                            <div class="position-relative h-100">
                                <img src="@room.ImageUrl" class="img-fluid rounded-start h-100" style="object-fit: cover;" alt="@room.Name">
                                <div class="position-absolute bottom-0 start-0 bg-dark bg-opacity-75 text-white px-2 py-1 rounded-end">
                                    <small>₱@room.Price.ToString("N0") per night</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div class="card-body d-flex flex-column h-100">
                                <div class="mb-auto">
                                    <h5 class="card-title text-primary border-bottom pb-2">@room.Name</h5>
                                    <p class="card-text small">@(room.Description.Length > 100 ? room.Description.Substring(0, 100) + "..." : room.Description)</p>
                                    
                                    <div class="mb-2">
                                        @if (room.HasKingBed)
                                        {
                                            <span class="badge bg-dark me-1">King Bed</span>
                                        }
                                        @if (room.HasDoubleBeds)
                                        {
                                            <span class="badge bg-dark me-1">Double Beds</span>
                                        }
                                        <span class="badge bg-secondary">@room.MaxGuests Guests</span>
                                    </div>
                                    
                                    <div class="small mb-2">
                                        <ul class="list-unstyled mb-0">
                                            <li><i class="bi bi-check-circle text-success"></i> Free Wi-Fi</li>
                                            <li><i class="bi bi-check-circle text-success"></i> Air Conditioning</li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <div class="d-flex mt-2">
                                    <div class="btn-group w-100">
                                        <a href="#" class="btn btn-outline-primary details-btn" data-room-id="@room.Id" data-room-name="@room.Name" data-room-desc="@room.Description" data-room-img="@room.ImageUrl" data-room-price="@room.Price.ToString("N0")">Details</a>
                                        <a href="#" class="btn btn-primary booking-btn" data-room-id="@room.Id">Book Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="col-12 text-center">
                <p>No rooms match your filter criteria. Please try different options.</p>
            </div>
        }
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Room Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <img id="modal-room-image" src="" class="img-fluid rounded mb-3" alt="Room Image">
                        <h6 class="text-primary">Room Amenities</h6>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item"><i class="bi bi-wifi text-success me-2"></i> Free High-Speed Wi-Fi</li>
                            <li class="list-group-item"><i class="bi bi-snow text-success me-2"></i> Air Conditioning</li>
                            <li class="list-group-item"><i class="bi bi-tv text-success me-2"></i> 42" Flat-screen TV</li>
                            <li class="list-group-item"><i class="bi bi-safe text-success me-2"></i> In-room Safe</li>
                            <li class="list-group-item"><i class="bi bi-cup-hot text-success me-2"></i> Coffee/Tea Making Facilities</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h4 id="modal-room-name" class="mb-3"></h4>
                        <p id="modal-room-desc" class="mb-4"></p>
                        
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5>Price per Night</h5>
                            <h5 class="text-primary">₱<span id="modal-room-price"></span></h5>
                        </div>
                        
                        <div id="modal-room-beds" class="mb-3">
                            <!-- Bed type will be inserted here by JS -->
                        </div>
                        
                        <h6>Room Services</h6>
                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item"><i class="bi bi-clock-history text-success me-2"></i> 24/7 Room Service</li>
                            <li class="list-group-item"><i class="bi bi-person-check text-success me-2"></i> Daily Housekeeping</li>
                            <li class="list-group-item"><i class="bi bi-telephone text-success me-2"></i> Concierge Service</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="details-book-now">Book Now</button>
            </div>
        </div>
    </div>
</div>

<!-- Booking Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">Complete Your Reservation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="booking-form" method="post" action="@Url.Action("Book", "Booking")">
                    <input type="hidden" id="modal-room-id" name="roomId">
                    
                    <h6 class="mb-3">Guest Information</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="guest-name" class="form-label">Full Name*</label>
                            <input type="text" class="form-control" id="guest-name" name="guestName" required>
                        </div>
                        <div class="col-md-6">
                            <label for="guest-email" class="form-label">Email Address*</label>
                            <input type="email" class="form-control" id="guest-email" name="guestEmail" required>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="guest-phone" class="form-label">Phone Number*</label>
                            <input type="tel" class="form-control" id="guest-phone" name="guestPhone" required>
                        </div>
                        <div class="col-md-6">
                            <label for="guest-address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="guest-address" name="guestAddress">
                        </div>
                    </div>
                    
                    <h6 class="mb-3 mt-4">Reservation Details</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="modal-check-in" class="form-label">Check-in Date*</label>
                            <input type="date" class="form-control" id="modal-check-in" name="checkIn" required>
                        </div>
                        <div class="col-md-6">
                            <label for="modal-check-out" class="form-label">Check-out Date*</label>
                            <input type="date" class="form-control" id="modal-check-out" name="checkOut" required>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="modal-guests" class="form-label">Number of Guests*</label>
                            <select class="form-select" id="modal-guests" name="numberOfGuests">
                                <option value="1">1 Guest</option>
                                <option value="2" selected>2 Guests</option>
                                <option value="3">3 Guests</option>
                                <option value="4">4 Guests</option>
                                <option value="5">5 Guests</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="special-requests" class="form-label">Special Requests</label>
                            <textarea class="form-control" id="special-requests" name="specialRequests" rows="2"></textarea>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="modal-price" class="form-label">Price per Night</label>
                            <div class="input-group">
                                <span class="input-group-text">₱</span>
                                <input type="text" class="form-control" id="modal-price" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <!-- Discount Code Section -->
                            <label for="discountCode" class="form-label">Discount Code (Optional)</label>
                            <div class="input-group mb-2">
                                <input type="text" class="form-control" id="discountCode" name="discountCode" placeholder="Enter promo code">
                                <button type="button" id="applyDiscount" class="btn btn-secondary">Apply</button>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <button type="button" id="bestDiscountBtn" class="btn btn-sm btn-outline-primary">Find Best Discount</button>
                                <button type="button" id="clearDiscountBtn" class="btn btn-sm btn-outline-secondary">Clear</button>
                            </div>
                            <div id="discountMessage" class="form-text mb-2"></div>
                            <div id="discountSummary" style="display:none;" class="alert alert-success py-2">
                                <p class="mb-1" id="discountText"></p>
                                <p class="mb-1">Discounted Price: <span id="discountedPrice" class="fw-bold"></span></p>
                            </div>
                            <input type="hidden" id="appliedDiscountId" name="appliedDiscountId" value="">
                            <input type="hidden" id="discountAmount" name="discountAmount" value="0">
                            <input type="hidden" id="originalPrice" name="originalPrice" value="0">
                            <!-- End Discount Code Section -->
                            <label for="modal-total" class="form-label">Total Price</label>
                            <div class="input-group">
                                <span class="input-group-text">₱</span>
                                <input type="text" class="form-control" id="modal-total" readonly>
                            </div>
                            <div class="form-text" id="nights-info"></div>
                        </div>
                    </div>
                    
                    <!-- Additional Services Section -->
                    <h6 class="mb-3 mt-4">Additional Services</h6>
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="chk-pool-access" name="SelectedServices" value="PoolAccess">
                                <label class="form-check-label" for="chk-pool-access">
                                    <i class="bi bi-water text-primary me-1"></i> Swimming Pool Access
                                </label>
                                <div id="pool-guests-container" class="ms-4 mt-2" style="display: none;">
                                    <label for="pool-guest-count" class="form-label">Number of Guests</label>
                                    <input type="number" class="form-control form-control-sm" id="pool-guest-count" name="PoolGuestCount" min="1" value="1">
                                    <small class="text-muted">First 2 guests are free. ₱250 fee for each additional guest.</small>
                                    <input type="hidden" id="pool-price" name="PoolPrice" value="0">
                                </div>
                            </div>
                            
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="chk-breakfast" name="SelectedServices" value="BreakfastBuffet">
                                <label class="form-check-label" for="chk-breakfast">
                                    <i class="bi bi-cup-hot text-warning me-1"></i> Breakfast Buffet
                                </label>
                                <div id="breakfast-guests-container" class="ms-4 mt-2" style="display: none;">
                                    <label for="breakfast-guest-count" class="form-label">Number of Guests</label>
                                    <input type="number" class="form-control form-control-sm" id="breakfast-guest-count" name="BreakfastGuestCount" min="1" value="1">
                                    <small class="text-muted">First 2 guests are free. ₱650 fee for each additional guest.</small>
                                    <input type="hidden" id="breakfast-price" name="BreakfastPrice" value="0">
                                </div>
                            </div>
                            
                            <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input" id="chk-gym" name="SelectedServices" value="GymAccess">
                                <label class="form-check-label" for="chk-gym">
                                    <i class="bi bi-bicycle text-danger me-1"></i> Gym Access
                                </label>
                                <div id="gym-guests-container" class="ms-4 mt-2" style="display: none;">
                                    <label for="gym-guest-count" class="form-label">Number of Guests</label>
                                    <input type="number" class="form-control form-control-sm" id="gym-guest-count" name="GymGuestCount" min="1" value="1">
                                    <small class="text-muted">First 2 guests are free. ₱400 fee for each additional guest.</small>
                                    <input type="hidden" id="gym-price" name="GymPrice" value="0">
                                </div>
                            </div>
                            
                            <div class="form-text mt-3">
                                <i class="bi bi-info-circle"></i> Select additional services to enhance your stay. Prices will be automatically calculated.
                            </div>
                        </div>
                    </div>
                    
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> Your reservation is risk-free. Free cancellation up to 24 hours before check-in.
                    </div>
                    
                    <h6 class="mb-3 mt-4">Payment Method</h6>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Select Payment Method*</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="payment-credit-card" value="CreditCard" checked>
                                <label class="form-check-label" for="payment-credit-card">
                                    Credit Card
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="payment-gcash" value="GCash">
                                <label class="form-check-label" for="payment-gcash">
                                    GCash
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="paymentMethod" id="payment-pay-later" value="PayAtHotel">
                                <label class="form-check-label" for="payment-pay-later">
                                    Pay at Hotel
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div id="credit-card-form">
                                <div class="mb-2">
                                    <label for="card-name" class="form-label">Cardholder Name</label>
                                    <input type="text" class="form-control" id="card-name" placeholder="John Doe">
                                </div>
                                <div class="mb-2">
                                    <label for="card-number" class="form-label">Card Number</label>
                                    <input type="text" class="form-control" id="card-number" placeholder="1234 5678 9012 3456">
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <label for="card-expiry" class="form-label">Expiry Date</label>
                                        <input type="text" class="form-control" id="card-expiry" placeholder="MM/YY">
                                    </div>
                                    <div class="col-6">
                                        <label for="card-cvc" class="form-label">CVC</label>
                                        <input type="text" class="form-control" id="card-cvc" placeholder="123">
                                    </div>
                                </div>
                            </div>
                            <div id="gcash-form" style="display: none;">
                                <div class="mb-2">
                                    <label for="gcash-name" class="form-label">GCash Account Name</label>
                                    <input type="text" class="form-control" id="gcash-name" placeholder="Juan Dela Cruz">
                                </div>
                                <div class="mb-2">
                                    <label for="gcash-number" class="form-label">GCash Account Number</label>
                                    <input type="text" class="form-control" id="gcash-number" placeholder="09XX XXX XXXX">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirm-booking">Complete Reservation</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Check for URL parameters to open modals automatically
            const urlParams = new URLSearchParams(window.location.search);
            const bookRoomId = urlParams.get('bookRoomId');
            const detailsRoomId = urlParams.get('detailsRoomId');
            
            if (bookRoomId) {
                // Find the room with the matching ID
                const bookingBtn = $(`.booking-btn[data-room-id="${bookRoomId}"]`);
                if (bookingBtn.length) {
                    // Trigger the click event on the booking button
                    bookingBtn.click();
                }
            } else if (detailsRoomId) {
                // Find the room with the matching ID
                const detailsBtn = $(`.details-btn[data-room-id="${detailsRoomId}"]`);
                if (detailsBtn.length) {
                    // Trigger the click event on the details button
                    detailsBtn.click();
                }
            }
            
            // Date handling for booking modal
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            
            // Format dates for input fields
            const formatDate = (date) => {
                const year = date.getFullYear();
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const day = String(date.getDate()).padStart(2, '0');
                return `${year}-${month}-${day}`;
            };
            
            // Check-in/out date validation
            $('#modal-check-in').change(function() {
                const checkIn = new Date($(this).val());
                const checkOut = new Date($('#modal-check-out').val());
                
                if (checkIn >= checkOut) {
                    const newCheckOut = new Date(checkIn);
                    newCheckOut.setDate(newCheckOut.getDate() + 1);
                    $('#modal-check-out').val(formatDate(newCheckOut));
                }
                
                // Update minimum check-out date
                $('#modal-check-out').attr('min', $(this).val());
                
                // Update total
                updateTotalPrice();
            });
            
            $('#modal-check-out').change(function() {
                updateTotalPrice();
            });
            
            // Details button click
            $('.details-btn').click(function(e) {
                e.preventDefault();
                const roomId = $(this).data('room-id');
                const roomName = $(this).data('room-name');
                const roomDesc = $(this).data('room-desc');
                const roomImg = $(this).data('room-img');
                const roomPrice = $(this).data('room-price');
                
                // Set modal values
                $('#detailsModalLabel').text(`${roomName}`);
                $('#modal-room-name').text(roomName);
                $('#modal-room-desc').text(roomDesc);
                $('#modal-room-image').attr('src', roomImg);
                $('#modal-room-price').text(roomPrice);
                
                // Get bed type information
                const $card = $(this).closest('.card');
                let bedInfo = '<h6>Bed Configuration</h6><ul class="list-group list-group-flush">';
                
                if ($card.find('.badge:contains("King Bed")').length > 0) {
                    bedInfo += '<li class="list-group-item"><i class="bi bi-lamp text-success me-2"></i> King Size Bed</li>';
                }
                
                if ($card.find('.badge:contains("Double Beds")').length > 0) {
                    bedInfo += '<li class="list-group-item"><i class="bi bi-lamp text-success me-2"></i> Double Beds</li>';
                }
                
                bedInfo += '</ul>';
                $('#modal-room-beds').html(bedInfo);
                
                // Show the details modal
                const detailsModal = new bootstrap.Modal(document.getElementById('detailsModal'));
                detailsModal.show();
                
                // Set current room ID for booking from details
                $('#details-book-now').data('room-id', roomId);
            });
            
            // Book Now from Details modal
            $('#details-book-now').click(function() {
                // Hide details modal
                bootstrap.Modal.getInstance(document.getElementById('detailsModal')).hide();
                
                // Get room details
                const roomId = $(this).data('room-id');
                const roomName = $('#modal-room-name').text();
                const roomPrice = $('#modal-room-price').text();
                
                // Set booking modal values
                $('#bookingModalLabel').text(`Book ${roomName}`);
                $('#modal-room-id').val(roomId);
                $('#modal-check-in').val(formatDate(today));
                $('#modal-check-out').val(formatDate(tomorrow));
                $('#modal-guests').val(2); // Default to 2 guests
                $('#modal-price').val(roomPrice);
                
                // Calculate total
                updateTotalPrice();
                
                // Show booking modal
                const bookingModal = new bootstrap.Modal(document.getElementById('bookingModal'));
                bookingModal.show();
            });
            
            // Booking button click
            $('.booking-btn').click(function(e) {
                e.preventDefault();
                const roomId = $(this).data('room-id');
                const roomName = $(this).closest('.card').find('.card-title').text();
                const roomPrice = $(this).closest('.card').find('.position-absolute').text().trim();
                
                // Extract price value
                const priceText = roomPrice.replace('₱', '').replace(' per night', '').trim();
                const price = parseInt(priceText.replace(/,/g, ''));
                
                // Set modal values
                $('#bookingModalLabel').text(`Book ${roomName}`);
                $('#modal-room-id').val(roomId);
                $('#modal-check-in').val(formatDate(today));
                $('#modal-check-out').val(formatDate(tomorrow));
                $('#modal-guests').val(2); // Default to 2 guests
                $('#modal-price').val(priceText);
                
                // Calculate total
                updateTotalPrice();
                
                // Show modal
                const bookingModal = new bootstrap.Modal(document.getElementById('bookingModal'));
                bookingModal.show();
            });
            
            // Calculate total price
            function updateTotalPrice() {
                const checkIn = new Date($('#modal-check-in').val());
                const checkOut = new Date($('#modal-check-out').val());
                const pricePerNight = parseFloat($('#modal-price').val().replace(/,/g, ''));
                
                if (!isNaN(checkIn) && !isNaN(checkOut) && !isNaN(pricePerNight)) {
                    const diffTime = Math.abs(checkOut - checkIn);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                    
                    if (diffDays > 0) {
                        const totalPrice = pricePerNight * diffDays;
                        $('#modal-total').val(totalPrice.toLocaleString());
                        $('#nights-info').text(`(${diffDays} night${diffDays > 1 ? 's' : ''})`);
                    } else {
                        $('#modal-total').val(pricePerNight.toLocaleString());
                        $('#nights-info').text('(1 night)');
                    }
                }
            }
            
            // Toggle payment form based on selected payment method
            $('input[name="paymentMethod"]').change(function() {
                if ($(this).val() === 'CreditCard') {
                    $('#credit-card-form').show();
                    $('#gcash-form').hide();
                } else if ($(this).val() === 'GCash') {
                    $('#gcash-form').show();
                    $('#credit-card-form').hide();
                } else {
                    $('#credit-card-form').hide();
                    $('#gcash-form').hide();
                }
            });
            
            // Additional services handling
            $('#chk-pool-access').change(function() {
                if ($(this).is(':checked')) {
                    $('#pool-guests-container').show();
                } else {
                    $('#pool-guests-container').hide();
                }
                updateTotalWithServices();
            });
            
            $('#chk-breakfast').change(function() {
                if ($(this).is(':checked')) {
                    $('#breakfast-guests-container').show();
                } else {
                    $('#breakfast-guests-container').hide();
                }
                updateTotalWithServices();
            });
            
            $('#chk-gym').change(function() {
                if ($(this).is(':checked')) {
                    $('#gym-guests-container').show();
                } else {
                    $('#gym-guests-container').hide();
                }
                updateTotalWithServices();
            });
            
            $('#pool-guest-count, #breakfast-guest-count, #gym-guest-count').change(function() {
                updateTotalWithServices();
            });
            
            function updateTotalWithServices() {
                // Get base room rate total
                const roomTotal = parseFloat($('#modal-total').val().replace(/,/g, ''));
                let servicesTotal = 0;
                
                // Calculate pool access price
                if ($('#chk-pool-access').is(':checked')) {
                    const poolGuests = parseInt($('#pool-guest-count').val());
                    const extraPoolGuests = Math.max(0, poolGuests - 2);
                    const poolPrice = extraPoolGuests * 250;
                    $('#pool-price').val(poolPrice);
                    servicesTotal += poolPrice;
                }
                
                // Calculate breakfast price
                if ($('#chk-breakfast').is(':checked')) {
                    const breakfastGuests = parseInt($('#breakfast-guest-count').val());
                    const extraBreakfastGuests = Math.max(0, breakfastGuests - 2);
                    const breakfastPrice = extraBreakfastGuests * 650;
                    $('#breakfast-price').val(breakfastPrice);
                    servicesTotal += breakfastPrice;
                }
                
                // Calculate gym price
                if ($('#chk-gym').is(':checked')) {
                    const gymGuests = parseInt($('#gym-guest-count').val());
                    const extraGymGuests = Math.max(0, gymGuests - 2);
                    const gymPrice = extraGymGuests * 400;
                    $('#gym-price').val(gymPrice);
                    servicesTotal += gymPrice;
                }
                
                // Display total with services
                const grandTotal = roomTotal + servicesTotal;
                $('#modal-total').val(grandTotal.toLocaleString());
                
                // Update services total display
                if (servicesTotal > 0) {
                    if (!$('#services-total-display').length) {
                        $('#nights-info').after('<div id="services-total-display" class="text-success small">+ ₱' + servicesTotal.toLocaleString() + ' for additional services</div>');
                    } else {
                        $('#services-total-display').text('+ ₱' + servicesTotal.toLocaleString() + ' for additional services');
                    }
                } else {
                    $('#services-total-display').remove();
                }
            }
            
            // Add event listeners for input changes
            $('#modal-guests').change(function() {
                updateServiceForms();
            });
            
            function updateServiceForms() {
                const guestCount = parseInt($('#modal-guests').val());
                $('#pool-guest-count').val(guestCount);
                $('#breakfast-guest-count').val(guestCount);
                $('#gym-guest-count').val(guestCount);
                updateTotalWithServices();
            }
            
            // Confirm booking button
            $('#confirm-booking').click(function(e) {
                e.preventDefault();
                // Submit the form programmatically
                $('#booking-form').submit();
            });
            
            // Filter rooms
            $('.filter-checkbox').change(function() {
                var kingBed = $('#kingBed').is(':checked');
                var doubleBeds = $('#doubleBeds').is(':checked');
                var threeGuests = $('#threeGuests').is(':checked');
                var fourGuests = $('#fourGuests').is(':checked');
                
                $.ajax({
                    url: '@Url.Action("FilterRooms", "Rooms")',
                    type: 'POST',
                    data: {
                        kingBed: kingBed,
                        doubleBeds: doubleBeds,
                        threeGuests: threeGuests,
                        fourGuests: fourGuests
                    },
                    success: function(result) {
                        $('#roomList').html(result);
                        
                        // Rebind event handlers
                        rebindEventHandlers();
                    }
                });
            });
            
            // Function to rebind event handlers after AJAX updates
            function rebindEventHandlers() {
                // Rebind booking buttons
                $('.booking-btn').click(function(e) {
                    e.preventDefault();
                    const roomId = $(this).data('room-id');
                    const roomName = $(this).closest('.card').find('.card-title').text();
                    const roomPrice = $(this).closest('.card').find('.position-absolute').text().trim();
                    
                    // Extract price value
                    const priceText = roomPrice.replace('₱', '').replace(' per night', '').trim();
                    const price = parseInt(priceText.replace(/,/g, ''));
                    
                    // Set modal values
                    $('#bookingModalLabel').text(`Book ${roomName}`);
                    $('#modal-room-id').val(roomId);
                    $('#modal-check-in').val(formatDate(today));
                    $('#modal-check-out').val(formatDate(tomorrow));
                    $('#modal-guests').val(2); // Default to 2 guests
                    $('#modal-price').val(priceText);
                    
                    // Calculate total
                    updateTotalPrice();
                    
                    // Show modal
                    const bookingModal = new bootstrap.Modal(document.getElementById('bookingModal'));
                    bookingModal.show();
                });
                
                // Rebind details buttons
                $('.details-btn').click(function(e) {
                    e.preventDefault();
                    const roomId = $(this).data('room-id');
                    const roomName = $(this).data('room-name');
                    const roomDesc = $(this).data('room-desc');
                    const roomImg = $(this).data('room-img');
                    const roomPrice = $(this).data('room-price');
                    
                    // Set modal values
                    $('#detailsModalLabel').text(`${roomName}`);
                    $('#modal-room-name').text(roomName);
                    $('#modal-room-desc').text(roomDesc);
                    $('#modal-room-image').attr('src', roomImg);
                    $('#modal-room-price').text(roomPrice);
                    
                    // Get bed type information
                    const $card = $(this).closest('.card');
                    let bedInfo = '<h6>Bed Configuration</h6><ul class="list-group list-group-flush">';
                    
                    if ($card.find('.badge:contains("King Bed")').length > 0) {
                        bedInfo += '<li class="list-group-item"><i class="bi bi-lamp text-success me-2"></i> King Size Bed</li>';
                    }
                    
                    if ($card.find('.badge:contains("Double Beds")').length > 0) {
                        bedInfo += '<li class="list-group-item"><i class="bi bi-lamp text-success me-2"></i> Double Beds</li>';
                    }
                    
                    bedInfo += '</ul>';
                    $('#modal-room-beds').html(bedInfo);
                    
                    // Show the details modal
                    const detailsModal = new bootstrap.Modal(document.getElementById('detailsModal'));
                    detailsModal.show();
                    
                    // Set current room ID for booking from details
                    $('#details-book-now').data('room-id', roomId);
                });
            }

            // --- Discount Code Logic ---
            $('#applyDiscount').on('click', function() {
                validateDiscountCode();
            });
            
            function validateDiscountCode() {
                var code = $('#discountCode').val().trim();
                if (!code) {
                    $('#discountMessage').html('<span class="text-danger">Please enter a discount code</span>');
                    resetDiscount();
                    return;
                }
                
                validateAndApplyDiscount(code);
            }
            
            function validateAndApplyDiscount(code) {
                var checkIn = $('#modal-check-in').val();
                var checkOut = $('#modal-check-out').val();
                var pricePerNight = parseFloat($('#modal-price').val().replace(/,/g, ''));
                var roomId = $('#modal-room-id').val();
                if (!checkIn || !checkOut || !roomId) {
                    $('#discountMessage').html('<span class="text-danger">Please select valid dates and room first</span>');
                    resetDiscount();
                    return;
                }
                
                var days = Math.floor((new Date(checkOut) - new Date(checkIn)) / (1000 * 60 * 60 * 24));
                if (days <= 0) days = 1;
                var originalPrice = pricePerNight * days;
                
                $('#discountMessage').html('<span class="text-info">Validating discount code...</span>');
                $('#applyDiscount').prop('disabled', true).text('Checking...');
                
                $.ajax({
                    url: '/Booking/ValidateDiscountCode',
                    type: 'POST',
                    data: {
                        code: code,
                        roomId: roomId,
                        checkIn: checkIn,
                        checkOut: checkOut,
                        numberOfDays: days,
                        originalPrice: originalPrice
                    },
                    success: function(response) {
                        $('#applyDiscount').prop('disabled', false).text('Apply');
                        
                        if (response.isValid) {
                            $('#discountMessage').html('<span class="text-success"><i class="bi bi-check-circle"></i> ' + response.message + '</span>');
                            $('#discountSummary').show();
                            $('#discountText').text(response.discountDescription);
                            $('#discountedPrice').text('₱' + response.discountedPrice.toLocaleString('en-US', {minimumFractionDigits: 2, maximumFractionDigits: 2}));
                            $('#appliedDiscountId').val(response.discountId);
                            $('#discountAmount').val(response.discountAmount);
                            $('#originalPrice').val(originalPrice);
                            $('#modal-total').val(response.discountedPrice.toLocaleString());
                            
                            // Update the discount code field if it was empty (when using Best Discount)
                            if ($('#discountCode').val().trim() === '') {
                                $('#discountCode').val(code);
                            }
                        } else {
                            $('#discountMessage').html('<span class="text-danger"><i class="bi bi-exclamation-circle"></i> ' + response.message + '</span>');
                            resetDiscount();
                            $('#modal-total').val(originalPrice.toLocaleString());
                        }
                    },
                    error: function() {
                        $('#applyDiscount').prop('disabled', false).text('Apply');
                        $('#discountMessage').html('<span class="text-danger"><i class="bi bi-exclamation-triangle"></i> Error validating discount code. Please try again.</span>');
                        resetDiscount();
                    }
                });
            }
            
            $('#bestDiscountBtn').on('click', function() {
                findBestDiscount();
            });
            
            function findBestDiscount() {
                var checkIn = $('#modal-check-in').val();
                var checkOut = $('#modal-check-out').val();
                var pricePerNight = parseFloat($('#modal-price').val().replace(/,/g, ''));
                var roomId = $('#modal-room-id').val();
                
                if (!checkIn || !checkOut || !roomId) {
                    $('#discountMessage').html('<span class="text-danger">Please select valid dates and room first</span>');
                    resetDiscount();
                    return;
                }
                
                var days = Math.floor((new Date(checkOut) - new Date(checkIn)) / (1000 * 60 * 60 * 24));
                if (days <= 0) days = 1;
                var totalPrice = pricePerNight * days;
                
                $('#discountMessage').html('<span class="text-info">Finding best discount...</span>');
                $('#bestDiscountBtn').prop('disabled', true);
                
                $.ajax({
                    url: '/Booking/GetBestDiscount',
                    type: 'GET',
                    data: {
                        roomId: roomId,
                        checkIn: checkIn,
                        checkOut: checkOut,
                        totalPrice: totalPrice
                    },
                    success: function(response) {
                        $('#bestDiscountBtn').prop('disabled', false);
                        
                        if (response.success) {
                            if (response.hasDiscount) {
                                // Apply the best discount
                                $('#discountCode').val(response.code);
                                validateAndApplyDiscount(response.code);
                            } else {
                                $('#discountMessage').html('<span class="text-warning"><i class="bi bi-info-circle"></i> No applicable discounts found for your booking</span>');
                            }
                        } else {
                            $('#discountMessage').html('<span class="text-danger"><i class="bi bi-exclamation-circle"></i> ' + response.message + '</span>');
                        }
                    },
                    error: function() {
                        $('#bestDiscountBtn').prop('disabled', false);
                        $('#discountMessage').html('<span class="text-danger"><i class="bi bi-exclamation-triangle"></i> Error finding best discount. Please try again.</span>');
                    }
                });
            }
            
            $('#clearDiscountBtn').on('click', function() {
                $('#discountCode').val('');
                resetDiscount();
                updateTotalPrice();
                $('#discountMessage').html('');
            });
            
            $('#discountCode').on('keypress', function(e) {
                if (e.which === 13) {
                    e.preventDefault();
                    $('#applyDiscount').click();
                }
            });
            
            function resetDiscount() {
                $('#discountSummary').hide();
                $('#discountText').text('');
                $('#discountedPrice').text('');
                $('#appliedDiscountId').val('');
                $('#discountAmount').val(0);
                $('#originalPrice').val(0);
            }
            // --- End Discount Code Logic ---
        });
    </script>
} 